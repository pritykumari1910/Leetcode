class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n=nums.size();
        int i=0,c=0;
        int k=1;
        int z=0;

        for(int j=0;j<n;j++){
            if(nums[j]==0){
                z++;
            }
            while(z>k){
                if(nums[i]==0)
                    z--;
                    i++;


            }
            if(c<j-i+1){
                c=j-i+1;
            }

        }
        return c-1;
        
    }
};
